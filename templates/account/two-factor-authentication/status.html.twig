{% extends 'base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'account.twoFactor.title'|trans }} - {{ parent() }}{% endblock %}
{% block pageTitle %}{% endblock %}

{% block pageBody %}
    <div class="container-tight pb-4">
        <div class="row">
            <div class="col text-center">
                <img src="{{ asset('build/images/icons/two-factor.svg')|add_path_prefix }}" class="mb-5 illustration-detail" alt="" />
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="card card-md">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">{{ 'account.twoFactor.title'|trans }}</h2>

                        <div class="alert alert-success">
                            {{ 'account.twoFactor.status.intro'|trans }}
                        </div>

                        <a href="{{ path('account_two_factor_start_force') }}" class="btn btn-primary w-100 mb-3">
                            <i class="ti ti-2fa"></i>
                            {{ 'account.twoFactor.action.reconfigure'|trans }}
                        </a>

                        <a href="{{ path('account_two_factor_reset_backup_codes') }}" class="btn btn-light w-100 mb-3">
                            <i class="ti ti-repeat"></i>
                            {{ 'account.twoFactor.action.resetBackupCodes'|trans }}
                        </a>

                        <a href="{{ path('account_two_factor_disable') }}" class="btn btn-danger w-100">
                            <i class="ti ti-circle-x"></i>
                            {{ 'account.twoFactor.action.disable'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 col-md-auto mt-2 mt-md-0">
                <a href="{{ path('account_overview') }}" class="btn btn-outline-secondary w-100" tabindex="1000">
                    <i class="ti ti-chevron-left"></i>
                    {{ 'account.backToOverview'|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}